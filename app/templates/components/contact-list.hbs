<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone Number</th>
      <th>Mobile Number</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>

    <!-- List the contacts -->
    {{#each contact as |contact|}}
      <tr>
        <td>{{contact.firstName}}</td>
        <td>{{contact.lastName}}</td>
        <td>{{contact.phoneNumber}}</td>
        <td>{{contact.mobileNumber}}</td>
        <td>
          <button {{action 'deleteContact' contact}} class="btn btn-danger">
            Delete Contact
          </button>
        </td>
      </tr>

    <!-- There are no contacts -->
    {{else}}
      <tr>
        <td colspan="5">
          You have not created any contacts.
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
